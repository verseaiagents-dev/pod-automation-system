# POD Automation System - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# n8n Configuration
# ===========================================
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# ===========================================
# Anthropic (Claude) API
# ===========================================
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# ===========================================
# Design Generation API
# Choose one: NanoBanana (Google) or OpenAI
# ===========================================

# NanoBanana (Gemini) - Recommended
NANOBANANA_API_KEY=your-google-api-key
NANOBANANA_MODEL=gemini-2.5-flash-preview

# OpenAI (DALL-E 3) - Alternative
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxx
DALLE_MODEL=dall-e-3

# ===========================================
# Airtable Configuration
# ===========================================
AIRTABLE_API_KEY=patxxxxxxxxxxxxxxxxxx
AIRTABLE_BASE_ID=appxxxxxxxxxxxxxxxxxx

# Table IDs (optional - can use table names)
AIRTABLE_TABLE_DESIGNS=tblxxxxxxxxxxxxxxxxxx
AIRTABLE_TABLE_PRODUCTS=tblxxxxxxxxxxxxxxxxxx
AIRTABLE_TABLE_MOCKUPS=tblxxxxxxxxxxxxxxxxxx
AIRTABLE_TABLE_COPY=tblxxxxxxxxxxxxxxxxxx
AIRTABLE_TABLE_QUEUE=tblxxxxxxxxxxxxxxxxxx
AIRTABLE_TABLE_SETTINGS=tblxxxxxxxxxxxxxxxxxx
AIRTABLE_TABLE_LOGS=tblxxxxxxxxxxxxxxxxxx
AIRTABLE_TABLE_ANALYTICS=tblxxxxxxxxxxxxxxxxxx

# ===========================================
# Slack Configuration
# ===========================================
SLACK_BOT_TOKEN=xoxb-xxxxxxxxxxxxxxxxxxxxx
SLACK_SIGNING_SECRET=xxxxxxxxxxxxxxxxxxxxxxxx
SLACK_APP_TOKEN=xapp-xxxxxxxxxxxxxxxxxxxxx
SLACK_CHANNEL_ID=C0XXXXXXXXX

# ===========================================
# Printify Configuration
# ===========================================
PRINTIFY_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx
PRINTIFY_SHOP_ID=xxxxxxxx
PRINTIFY_DEFAULT_PROVIDER=99

# ===========================================
# Mockup API (Choose one)
# ===========================================

# Placeit API
PLACEIT_API_KEY=your-placeit-key

# Or custom mockup service
MOCKUP_API_URL=https://your-mockup-api.com
MOCKUP_API_KEY=your-api-key

# ===========================================
# Optional: Rate Limiting & Performance
# ===========================================
DESIGN_QUALITY_THRESHOLD=7
MAX_REGENERATION_ATTEMPTS=3
RETRY_DELAY_MS=1000
MAX_RETRY_ATTEMPTS=3
PRINTIFY_RATE_LIMIT=200
PRINTIFY_RATE_LIMIT_WINDOW=1800

# ===========================================
# Optional: Logging & Debug
# ===========================================
LOG_LEVEL=info
DEBUG_MODE=false
